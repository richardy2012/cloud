<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <!-- Enable AspectJ style of Spring AOP -->
    <aop:aspectj-autoproxy proxy-target-class="true"/>

    <!--Enable automatic scan aop and subpackage of aop-->
    <!--<context:component-scan base-package="com.chinascope.cloud.aop"/>-->
    <!--<aop:aspectj-autoproxy proxy-target-class="true"/>-->


    <bean name="demoService" class="com.chinascope.cloud.service.DemoService">
    </bean>

    <!-- Configure Aspect Beans, without this Aspects advices wont execute -->
    <bean name="partitionAnnotationAspect" class="com.chinascope.cloud.aop.PartitionAnnotationAspect"/>

</beans>
